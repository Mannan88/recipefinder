<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe</title>
    <link rel="stylesheet" href="/styles/layout.css">
</head>

<body>
    <h1>Find Recipes with Ingredients</h1>

    <!-- Form to add ingredients -->
    <form action="/recipe" method="POST">
        <label for="ingredients">Add Ingredients (comma-separated):</label>
        <input type="text" id="ingredients" name="ingredients" placeholder="flour, milk, eggs" required>
        <button type="submit">Search Recipes</button>
    </form>

    <% if (typeof recipes !== "undefined" && recipes.length > 0) { %>
        <h2>Recipes</h2>
        <ul>
            <% recipes.forEach(recipe => { %>
                <li>
                    <h3><%= recipe.strMeal %></h3>
                    <img src="<%= recipe.strMealThumb %>" alt="<%= recipe.strMeal %>" width="100">
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No recipes found.</p>
    <% } %>
</body>
